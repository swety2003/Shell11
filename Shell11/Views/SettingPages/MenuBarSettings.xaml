<UserControl x:Class="Shell11.Views.SettingPages.MenuBarSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shell11.Views.SettingPages"
             mc:Ignorable="d" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern" xmlns:viewmodels="clr-namespace:Shell11.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MenuBarSettingsViewModel}"
             Margin="{StaticResource SettingsPageMargin}"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>

        <FrameworkElement Name="proxy" DataContext="{Binding}"/>

        <TextBlock Margin="0 4" FontSize="{StaticResource MediumTitleFontSize}" Text="扩展设置"/>

        <ItemsControl ItemsSource="{Binding Extensions}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Padding="0" Margin="0 2" Style="{StaticResource Style_SectionBorderStyle}">
                        
                        <Button HorizontalContentAlignment="Stretch" Background="Transparent" BorderThickness="0" Height="64" HorizontalAlignment="Stretch"
                                Command="{Binding ElementName=proxy,Path=DataContext.NavigateToCommand}" CommandParameter="{Binding}">
                            <DockPanel>
                                <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="24" Margin="8 0 16 0" VerticalAlignment="Center" HorizontalAlignment="Right" 
                                           DockPanel.Dock="Left" FontFamily="{StaticResource IconFontFamily}">&#xEA86;</TextBlock>
                                    
                                    <StackPanel>

                                        <TextBlock FontSize="{StaticResource LargeFontSize}" Text="{Binding NavKey}"/>

                                        <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                                                   FontSize="{StaticResource MediumFontSize}" Text="{Binding NavKey}"/>

                                    </StackPanel>
                                </StackPanel>
                                <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" 
                                            HorizontalAlignment="Right"  Orientation="Horizontal">
                                    
                                    <ui:ToggleSwitch TextElement.Foreground="Transparent" VerticalAlignment="Center" HorizontalAlignment="Right" 
                                                     IsOn="{Binding IsEnabled}">
                                        <i:Interaction.Triggers>
                                        
                                            <i:PropertyChangedTrigger Binding="{Binding IsEnabled}">
                                                <i:InvokeCommandAction Command="{Binding ElementName=proxy,Path=DataContext.EnableChangedCommand}" 
                                                                       CommandParameter="{Binding}"/>
                                            </i:PropertyChangedTrigger>
                                        </i:Interaction.Triggers>

                                    </ui:ToggleSwitch>
                                    <TextBlock VerticalAlignment="Center" FontFamily="{StaticResource IconFontFamily}">&#xE76C;</TextBlock>
                                </StackPanel>
                            </DockPanel>
                        </Button>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
            
    </StackPanel>
</UserControl>
