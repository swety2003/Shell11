<UserControl x:Class="Shell11.Views.SettingPages.TaskBarSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shell11.Views.SettingPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Padding="0" Margin="0 2" Style="{StaticResource Style_SectionBorderStyle}">
            <ToggleButton IsChecked="{Binding Source={x:Static Settings.Instance},Path=EnableTaskBar}" BorderThickness="0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <DockPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="24" Margin="8 0 16 0" VerticalAlignment="Center" HorizontalAlignment="Right" 
               DockPanel.Dock="Left" FontFamily="{StaticResource IconFontFamily}">&#xE66B;</TextBlock>

                        <TextBlock VerticalAlignment="Center" FontSize="{StaticResource LargeFontSize}" Text="启用任务栏"/>

                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" 
                HorizontalAlignment="Right"  Orientation="Horizontal">

                        <TextBlock VerticalAlignment="Center" FontFamily="{StaticResource IconFontFamily}">&#xE76C;</TextBlock>
                    </StackPanel>
                </DockPanel>
            </ToggleButton>
        </Border>

        <StackPanel Grid.Row="1">

            <TextBlock Margin="0 4" FontSize="{StaticResource MediumTitleFontSize}" Text="任务栏"/>

            <Expander Padding="24 12">
                <Expander.Header>
                    <DockPanel Margin="8 12">
                        <TextBlock>
                        <Run FontSize="17" Text="任务栏行为"/>
                        <LineBreak/>
                        <Run Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            任务栏对齐、标记、自动隐藏和多个显示器
                        </Run>
                        </TextBlock>

                    </DockPanel>
                </Expander.Header>
                <StackPanel>

                    <DockPanel>
                        <TextBlock VerticalAlignment="Center" Text="任务栏对齐方式"/>

                        <ComboBox SelectedIndex="{Binding Source={x:Static Settings.Instance},Path=TaskbarMode}" HorizontalAlignment="Right">
                            <ComboBoxItem>居中</ComboBoxItem>
                            <ComboBoxItem>左对齐</ComboBoxItem>
                        </ComboBox>
                    </DockPanel>

                    <Separator Margin="0 12"/>

                    <DockPanel>
                        <CheckBox IsChecked="{Binding Source={x:Static Settings.Instance},Path=AutoHideTaskBar}" Content="自动隐藏任务栏"/>
                    </DockPanel>


                    <Separator Margin="0 12"/>
                    <DockPanel>
                        <TextBlock VerticalAlignment="Center" Text="合并任务栏标签"/>

                        <ComboBox SelectedIndex="{Binding Source={x:Static Settings.Instance},Path=TaskbarGroupingStyle}" HorizontalAlignment="Right">
                            <ComboBoxItem>未实现</ComboBoxItem>
                            <ComboBoxItem>从不</ComboBoxItem>
                            <ComboBoxItem>始终</ComboBoxItem>
                        </ComboBox>
                    </DockPanel>

                </StackPanel>


            </Expander>

        </StackPanel>
    </Grid>
</UserControl>
