<UserControl
    x:Class="Shell11.MenuBarExtensions.Views.QuickFolder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shell11.MenuBarExtensions.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Menu>
        <MenuItem Name="位置" Header="位置">
            <MenuItem Name="UserName" Click="OpenUserFolder" />
            <MenuItem Click="OpenMyDocs" Header="文档" />
            <MenuItem
                x:Name="PlacesDownloadsItem"
                Click="OpenDownloads"
                Header="下载" />
            <MenuItem Click="OpenMyMusic" Header="音乐" />
            <MenuItem Click="OpenMyPics" Header="图片" />
            <MenuItem
                x:Name="PlacesVideosItem"
                Click="OpenMyVideos"
                Header="视频" />
            <Separator />
            <MenuItem Click="OpenMyComputer" Header="此电脑" />
            <MenuItem Click="OpenProgramFiles" Header="程序文件夹" />
            <Separator />
            <MenuItem Click="OpenRecycleBin" Header="回收站" />
        </MenuItem>
    </Menu>
</UserControl>
