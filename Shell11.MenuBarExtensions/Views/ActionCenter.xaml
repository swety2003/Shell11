<UserControl
    x:Class="Shell11.MenuBarExtensions.ActionCenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Shell11.Common.Controls;assembly=Shell11.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shell11.MenuBarExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Shell11.MenuBarExtensions.ViewModels"
    controls:AlignPanel.Alignment="Right"
    d:DataContext="{d:DesignInstance Type=viewmodels:ActionCenterViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="2">
        <Button
            Height="auto"
            Margin="0"
            Padding="6,2"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding ShowActionCenterCommand}"
            ToolTip="操作中心">
            <TextBlock
                FontFamily="{StaticResource IconFontFamily}"
                FontSize="16"
                Text="" />
        </Button>
    </Grid>
</UserControl>
