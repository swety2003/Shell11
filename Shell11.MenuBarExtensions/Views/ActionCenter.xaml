<UserControl x:Class="Shell11.MenuBarExtensions.ActionCenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Shell11.Common.Controls;assembly=Shell11.Common"
             xmlns:local="clr-namespace:Shell11.MenuBarExtensions" xmlns:viewmodels="clr-namespace:Shell11.MenuBarExtensions.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ActionCenterViewModel}"
             mc:Ignorable="d"
             controls:AlignPanel.Alignment="Right"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="2">
        <Button ToolTip="操作中心" BorderThickness="0" Background="Transparent" Height="auto" Margin="0" Padding="6 2" 
                Command="{Binding ShowActionCenterCommand}" >
            <TextBlock FontSize="16" FontFamily="{StaticResource IconFontFamily}" Text=""/>
        </Button>
    </Grid>
</UserControl>
